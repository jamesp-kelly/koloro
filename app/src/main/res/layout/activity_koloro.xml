<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.KoloroActivity"
    >

  <include layout="@layout/toolbar"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="?attr/actionBarSize"
      >
    <com.jameskelly.koloro.ui.layouts.RevealRelativeLayout
        android:id="@+id/reveal_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

      <Button
          android:id="@+id/start_capture"
          android:layout_height="60dp"
          android:layout_width="match_parent"
          android:layout_marginRight="@dimen/start_button_margin_right"
          android:paddingLeft="@dimen/start_button_margin_right"
          android:layout_alignParentLeft="true"
          style="?android:attr/borderlessButtonStyle"
          android:text="@string/start_capture_button"
          android:background="@color/colorAccent"
          />

      <ImageButton
          android:id="@+id/prefs_button"
          android:layout_width="50dp"
          android:layout_height="60dp"
          android:layout_alignParentRight="true"
          style="?android:attr/borderlessButtonStyle"
          android:background="@color/colorAccent"
          android:src="@drawable/ic_settings_black_24dp"
          />

      <!--<Button-->
          <!--android:id="@+id/help_button"-->
          <!--android:layout_width="match_parent"-->
          <!--android:layout_height="60dp"-->
          <!--android:layout_marginTop="20dp"-->
          <!--android:layout_below="@id/start_capture"-->
          <!--style="?android:attr/borderlessButtonStyle"-->
          <!--android:text="How to use"-->
          <!--android:background="@color/colorAccent"-->
          <!--/>-->


        <Button
            android:id="@+id/saved_colors_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            style="?android:attr/borderlessButtonStyle"
            android:text="@string/saved_colors_button"
            android:background="@color/colorAccent"
            android:visibility="gone"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/saved_colors_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="invisible"
            />

      <FrameLayout
          android:id="@+id/prefs_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="100dp"
          android:layout_below="@id/start_capture"
          android:layout_marginTop="5dp"
          android:padding="15dp"
          android:visibility="invisible"
          tools:visibility="invisible"
          android:background="@color/colorPrimaryDark"
          >

      </FrameLayout>

    </com.jameskelly.koloro.ui.layouts.RevealRelativeLayout>


  </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
