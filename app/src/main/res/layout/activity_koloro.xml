<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.KoloroActivity">

  <include layout="@layout/toolbar"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginTop="?attr/actionBarSize"
      >
    <com.jameskelly.koloro.ui.layouts.RevealRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

      <Button
          android:id="@+id/start_capture"
          android:layout_height="wrap_content"
          android:layout_width="290dp"
          android:layout_alignParentLeft="true"
          android:text="@string/start_capture_button"
          android:background="@color/colorAccent"
          />

      <ImageButton
          android:id="@+id/prefs_button"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:layout_toRightOf="@+id/start_capture"
          android:layout_alignParentRight="true"
          android:src="@drawable/ic_colorize_white_24dp"
          android:background="@color/colorPrimaryDark"
          />

      <LinearLayout
          android:id="@+id/prefs_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/start_capture"
          android:layout_marginTop="@dimen/prefs_layout_margin_top"
          android:padding="15dp"
          android:orientation="vertical"
          android:visibility="invisible"
          tools:visibility="visible"
          android:background="@color/colorPrimaryDark"
          >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal">
          <TextView
              style="@style/PrefsText"
              android:text="@string/show_notification_label" />
          <Switch
              android:id="@+id/switch_show_notification"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
          <TextView
              style="@style/PrefsText"
              android:text="Capture button position" />
          <Spinner
              android:id="@+id/spinner_capture_button_position"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
          <TextView
              style="@style/PrefsText"
              android:text="@string/store_captures_label" />
          <Switch
              android:id="@+id/switch_store_captures"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
          <TextView
              style="@style/PrefsText"
              android:text="@string/multi_shot_label" />
          <Switch
              android:id="@+id/switch_multi_shot"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
          <TextView
              style="@style/PrefsText"
              android:text="@string/capture_button_visible_label" />
          <Switch
              android:id="@+id/switch_capture_button_visible"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
        </LinearLayout>



      </LinearLayout>

    </com.jameskelly.koloro.ui.layouts.RevealRelativeLayout>



  </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
